{
    "name": "telegram-bot",
    "version": "1.0.0",
    "description": "Telegram bot starter kit",
    "main": "./build/src/index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "scripts": {
        "build": "del-cli -rf build && tsc && tsc-alias",
        "start": "node build/bot.js",
        "start:prod": "NODE_ENV=production node build/bot.js",
        "prepare": "husky install && chmod +x .husky/pre-commit",
        "test": "mocha --colors --require ts-node/register --file  test/bootstrap.ts test/**/*.spec.ts"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/test/**/*",
            "**/*.js",
            "**/config.ts",
            "./coverage"
        ],
        "excludeNodeModules": true,
        "reporter": [
            "text",
            "lcov"
        ],
        "all": true
    },
    "dependencies": {
        "dayjs": "^1.11.0",
        "dotenv": "^6.2.0",
        "eslint-plugin-import": "^2.26.0",
        "grammy": "^1.10",
        "inversify": "^6.0.1",
        "mime-types": "^2.1.35",
        "mmmagic": "^0.5.3",
        "reflect-metadata": "^0.1.13",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/dotenv": "^8.2.0",
        "@types/mime-types": "^2.1.1",
        "@types/mmmagic": "^0.4.30",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "chai": "^4.3.6",
        "del-cli": "^4.0.1",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.6",
        "mocha": "^9.2.2",
        "nyc": "^15.1.0",
        "prettier": "^2.6.0",
        "prettier-eslint": "^13.0.0",
        "ts-node": "^10.7.0",
        "tsc-alias": "^1.6.9",
        "typescript": "^4.6.2"
    }
}
