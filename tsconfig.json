{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "declarationDir": "./typings",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // Почему-то с этим не работает декораторы
        "useDefineForClassFields": false,
        "importHelpers": true,
        "esModuleInterop": true,
        "declarationMap": true,
        //        "inlineSourceMap": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "lib": [
            "ESNext",
            "ES6",
            "DOM"
        ],
        "types": [
            "node",
            "mocha",
            "chai",
            "reflect-metadata"
        ],
        "outDir": "./build",
        "baseUrl": ".",
        "paths": {
            "App/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "**/*.spec.ts"
    ]
}
